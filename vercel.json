{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/ping", "dest": "/api/ping.js" },
    { "src": "/api/hello", "dest": "/api/hello.js" },
    { "src": "/api/analyze-image", "dest": "/api/analyze-image.js" },
    { "src": "/api/analyze-product-image", "dest": "/api/analyze-product-image.js" }
  ]
}